<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.doadzikirapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DoaDzikirApp">
        <activity android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PagiPetangDzikir"
            android:exported="true">
        </activity>

        <activity android:name=".HarianDzikirDoa"
            android:exported="true">
        </activity>

        <activity
            android:name=".DzikirPetang"
            android:exported="true"
            android:theme="@style/PetangActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            android:name=".DzikirPagi"
            android:exported="true"
            android:theme="@style/PagiActivity"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            android:name=".DetailArtikel"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity
            android:name=".SetiapSaat"
            android:exported="true"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity">
        </activity>

        <activity android:name=".QauliyahShalat"
            android:theme="@style/Theme.DoaDzikirApp"
            android:exported="true">
        </activity>

        <activity android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/NoActionBar">

        </activity>



    </application>

</manifest>